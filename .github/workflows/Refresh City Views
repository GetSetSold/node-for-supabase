name: Refresh City Views

# Schedule to run daily at 35 mins past 13:00 UTC
on:
  schedule:
    - cron: '35 13 * * *'
  workflow_dispatch: # allows manual run from GitHub UI

jobs:
  refresh-views:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v3

      - name: Install PostgreSQL client
        run: sudo apt-get update && sudo apt-get install -y postgresql-client

      - name: Refresh Materialized Views
        env:
          SUPABASE_DB_URL: ${{ secrets.SUPABASE_DB_URL }} # full postgres:// URL
        run: |
          psql "$SUPABASE_DB_URL" <<EOF
          REFRESH MATERIALIZED VIEW city_listings_full;
          REFRESH MATERIALIZED VIEW city_listings_full_fast;
          EOF
